-section.links.each do |link|
  .clearfix.item.col-lg-10
    .col-md-5.pull-left
      - if link.image
        =link_to image_tag(link.image, :class => 'lg-thumbnail'), link.href, :target => '_blank'
    .col-md-7.col-sm-8.col-xs-12.pull-left
      %h4.text-capitalize
        =link_to link.title, link.href, :target => '_blank'
      %p=link.description
